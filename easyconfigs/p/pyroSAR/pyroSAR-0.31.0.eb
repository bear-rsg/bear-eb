easyblock = 'Conda'

name = 'pyroSAR'
version = '0.32.0'

homepage = 'https://pyrosar.readthedocs.io'
description = """The pyroSAR package aims at providing a complete solution for the scalable organization and 
processing of SAR satellite data."""

toolchain = SYSTEM

builddependencies = [('Miniforge3', '24.1.2-0')]

channels = ['conda-forge']

requirements = '%(namelower)s==%(version)s'

sanity_check_commands = ["python -c 'from pyroSAR import Archive'"]

moduleclass = 'data'
