# This easyconfig was created by the BEAR Software team at the University of Birmingham.
easyblock = 'PythonPackage'

name = 'TEtranscripts'
version = '2.2.3'
versionsuffix = '-R-%(rver)s'

homepage = "https://github.com/mhammell-laboratory/TEtranscripts"
description = """Tools for estimating differential enrichment
 of Transposable Elements and other highly repetitive regions"""
citing = """Jin Y, Tam OH, Paniagua E, Hammell M. (2015) TEtranscripts: a package for
 including transposable elements in differential expression analysis of RNA-seq datasets.
 Bioinformatics. 31(22):3593-9.
"""

toolchain = {'name': 'foss', 'version': '2024a'}

github_account = 'mhammell-laboratory'
source_urls = [GITHUB_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = ['e53577e8e73e41c6495fb819977e3e537bbeac7b2fa1635029201a37ee0bf7b8']
options = {'modulename': 'TEToolkit'} 

dependencies = [
    ('Python', '3.12.3'),
    ('R', '4.5.0'),
    ('R-bundle-CRAN', '2025.06'),
    ('R-bundle-Bioconductor', '3.21', versionsuffix),
    ('Pysam', '0.22.1'),
]

sanity_check_commands = [
    'TEcount --version',
    'TEtranscripts --version',
]

moduleclass = 'bio'
